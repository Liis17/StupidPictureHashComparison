<UserControl
    x:Class="StupidPictureHashComparison.WPF.Controls.ImageElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StupidPictureHashComparison.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Margin="5" Orientation="Vertical">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Border Background="#FFB5B5B5" CornerRadius="10" />
            <StackPanel Orientation="Vertical">
                <Border
                    Width="350"
                    Height="400"
                    Margin="5"
                    CornerRadius="15">
                    <Border.Background>
                        <ImageBrush
                            x:Name="Image"
                            ImageSource="Y:\Apogee\118617281_media_396325910_IMG_0129.png"
                            Stretch="UniformToFill" />
                    </Border.Background>
                </Border>
                <Grid Margin="5">
                    <Border Background="#FF525252" CornerRadius="10" />
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            x:Name="TextPath"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Center"
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="#FFD4D4D4"
                            Text="Path" />
                        <TextBlock
                            x:Name="TextHash"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Center"
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="#FFD4D4D4"
                            Text="Hash" />
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Grid>

    </StackPanel>
</UserControl>
