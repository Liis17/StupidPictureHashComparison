<UserControl
    x:Class="StupidPictureHashComparison.WPF.Controls.ImageMatching"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StupidPictureHashComparison.WPF.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Left" Margin="10">
        <Border Background="#FFE2E2E2" CornerRadius="10" />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <StackPanel x:Name="ImageList" Orientation="Horizontal">
                <!--  Элементы с картинками ImageElement будут добавлены сюда  -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
